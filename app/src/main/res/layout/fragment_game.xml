<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_dark">


        <TextView
            android:id="@+id/text_view_remaining_time_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:gravity="center"
            android:text="The remaining time:"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@id/text_view_score"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintVertical_chainStyle="spread" />

        <TextView
            android:id="@+id/text_view_remaining_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="76"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="36dp"
            app:layout_constraintTop_toBottomOf="@id/text_view_remaining_time_title"
            app:layout_constraintBottom_toTopOf="@id/text_view_score_title" />

        <TextView
            android:gravity="center"
            android:id="@+id/text_view_score_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Score:"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_view_remaining_time" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_score"
            android:textSize="36sp"
            android:text="24"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf = "@id/text_view_score_title"
            android:gravity="center" />


        <TextView
            android:id="@+id/text_view_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="27 x ___ = 81"
            android:textColor="@color/white"
            android:textSize="48sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_view_score"
            app:layout_constraintVertical_bias="0.22000003" />

        <com.google.android.material.button.MaterialButton
            app:cornerRadius="12dp"
            android:id="@+id/button_choice_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="4"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@id/button_choice_3"
            app:layout_constraintEnd_toStartOf="@+id/button_choice_2"
            app:layout_constraintHeight_percent="0.12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_view_question"
            app:layout_constraintVertical_bias="0.25"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintWidth_percent="0.4" />

        <com.google.android.material.button.MaterialButton
            app:cornerRadius="12dp"
            android:id="@+id/button_choice_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="5"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@id/button_choice_4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.12"
            app:layout_constraintStart_toEndOf="@id/button_choice_1"
            app:layout_constraintTop_toBottomOf="@id/text_view_question"
            app:layout_constraintVertical_bias="0.25"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintWidth_percent="0.4" />

        <com.google.android.material.button.MaterialButton
            app:cornerRadius="12dp"
            android:id="@+id/button_choice_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="2"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_choice_4"
            app:layout_constraintHeight_percent="0.12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_choice_1"
            app:layout_constraintWidth_percent="0.4" />

        <com.google.android.material.button.MaterialButton
            app:cornerRadius="12dp"
            android:id="@+id/button_choice_4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="3"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.12"
            app:layout_constraintStart_toEndOf="@id/button_choice_3"
            app:layout_constraintTop_toBottomOf="@id/button_choice_2"
            app:layout_constraintWidth_percent="0.4" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>