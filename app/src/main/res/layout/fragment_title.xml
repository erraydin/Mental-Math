<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_dark">

        <View
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="@color/outline_color"/>

        <com.google.android.material.button.MaterialButton
            android:textColor="@color/white"
            app:strokeColor="@color/outline_color"
            app:strokeWidth="0.7dp"
            android:id="@+id/button_info"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:backgroundTint="@color/background_dark"
            android:text="Info"
            app:cornerRadius="24dp"
            app:layout_constraintBottom_toTopOf="@id/button_play"
            app:layout_constraintDimensionRatio="H,3:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <com.google.android.material.button.MaterialButton
            android:textColor="@color/white"
            android:backgroundTint="@color/background_dark"
            app:strokeColor="@color/outline_color"
            app:strokeWidth="0.7dp"
            android:id="@+id/button_play"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:text="Play"
            app:cornerRadius="24dp"
            app:layout_constraintBottom_toBottomOf="@id/button_history"
            app:layout_constraintDimensionRatio="H,3:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_info" />

        <com.google.android.material.button.MaterialButton
            android:textColor="@color/white"
            app:strokeColor="@color/outline_color"
            app:strokeWidth="0.7dp"
            android:backgroundTint="@color/background_dark"
            android:id="@+id/button_history"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:text="Score History"
            app:cornerRadius="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="H,3:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_play" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>